{
  "name": "online-scrabble-game",
  "version": "1.0.0",
  "description": "Online multiplayer Scrabble game supporting up to 15 players",
  "main": "server/index.js",
  "scripts": {
    "start": "node start.js",
    "start:server": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install": "npm install --no-package-lock && cd client && npm install --no-package-lock",
    "postinstall": "cd client && npm install --no-package-lock",
    "heroku-postbuild": "cd client && npm install --no-package-lock && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0",
    "word-list": "^3.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "keywords": ["scrabble", "multiplayer", "game", "websockets", "react"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}